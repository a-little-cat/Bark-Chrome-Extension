{
    "name": "SwordTab",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Now your tabs can sync",
    "permissions": [
        "*://*/*",
        "activeTab",
        "tabs",
        "storage",
        "unlimitedStorage",
        "notifications",
        "contextMenus",
        "clipboardRead"
    ],
    "background" : {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["contentScript.js"]
      }
    ],

    "icons": {
        "16": "sword.png",
        "48": "sword.png",
        "128": "sword.png"
    },
    "options_page": "options.html",
    "browser_action": {
        "default_icon": {
            "16": "sword.png",
            "48": "sword.png",
            "128": "sword.png"
        },
        "default_title": "Bark"
    }
}
